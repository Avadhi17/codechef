#include <bits/stdc++.h>

#include<cmath>

using namespace std;

int main() {
    // your code goes here
    int t, x1, x2, y1, y2;
    cin >> t;
    while (t--) {
        cin >> x1 >> y1 >> x2 >> y2;
        int num1 = x1 + y1;
        int num2 = x2 + y2;
        cout << min(num1, num2) << endl;
    }

}
