#include <bits/stdc++.h>

#include<cmath>

using namespace std;

int main() {
    // your code goes here
    int t, x1, y1, x2, y2;
    cin >> t;
    while (t--) {
        cin >> x1 >> y1 >> x2 >> y2;
        int num1 = x1 - x2;
        int num2 = y1 - y2;
        int result = max(abs(num1), abs(num2));
        cout << result << endl;
    }
}
