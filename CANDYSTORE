#include <bits/stdc++.h>

using namespace std;

int main() {
    int t;
    cin >> t;
    while (t--)
    {
        int x, y;
        cin >> x >> y;

        if (y > x) {
            int total_amount = 2 * y - x;
            cout << total_amount << endl;

        }
        else {
            int total_amount = y;
            cout << total_amount << endl;

        }
    }


}
