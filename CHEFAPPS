#include <bits/stdc++.h>

using namespace std;

int main() {
    // your code goes here
    int t, s, x, y, z;
    cin >> t;
    while (t--) {
        cin >> s >> x >> y >> z;
        int memory_left = s - (x + y);
        if (memory_left >= z) {
            cout << 0 << endl;
        }
        else {
            if (s - x >= z || s - y >= z) {
                cout << 1 << endl;
            }
            else {
                cout << 2 << endl;
            }
        }
    }

}
