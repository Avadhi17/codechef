#include <bits/stdc++.h>

using namespace std;

int main() {
    // your code goes here
    int t, n, a, b;
    cin >> t;
    while (t--) {
        cin >> n >> a >> b;
        if (n % 2 == 0) {
            cout << (a + b) * (n / 2) << endl;
        }
        else {
            int result = (n / 2) * a + (n / 2 + 1) * b;
            cout << result << endl;
        }
    }

}
