#include <bits/stdc++.h>
using namespace std;

int main() {
	int t,x,y,z;
	cin >> t;
	while(t--){
	    cin >>x>>y>>z;
	    if( z < x){
	    
	        cout << 0 << endl;
         }
         else if(z >=x && z < x + y){
             cout << 1 << endl;
         }
         else if(z >= x+y){
             cout << 2 << endl;
         }
         else {
             cout << "error"<< endl;
         }
	}

}
