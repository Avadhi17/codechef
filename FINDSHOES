#include <bits/stdc++.h>

using namespace std;

int main() {
    // your code goes here
    int t, n, m;
    cin >> t;
    while (t--) {
        cin >> n >> m;
        // n = no. of friends
        //m = no. of left shoes
        if (n <= m) {
            cout << n << endl;
        }
        else {
            cout << 2 * n - m << endl;
        }
    }

}
